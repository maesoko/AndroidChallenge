<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".MainActivity$PlaceholderFragment">


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_introduction"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/introduction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_introduction_flick"
        android:layout_below="@+id/introduction"
        android:layout_centerHorizontal="true"
        android:id="@+id/introduction_flick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/introduction_flick"
        android:layout_centerHorizontal="true"
        android:text="@string/text_introduction_rotate"
        android:id="@+id/introduction_rotate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/introduction_rotate"
        android:layout_centerHorizontal="true"
        android:text="@string/text_introduction_doubleTap"
        android:id="@+id/introduction_doubleTap" />


</RelativeLayout>
